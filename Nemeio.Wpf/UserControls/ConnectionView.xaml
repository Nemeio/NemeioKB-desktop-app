<UserControl x:Class="Nemeio.Wpf.UserControls.ConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nemeio.Wpf.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" 
             d:DesignWidth="255">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Styles/BaseDictionary.xaml" />
                <ResourceDictionary
                    Source="../Styles/ColorDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel
        Orientation="Horizontal"
        Background="Transparent"
        Height="40"
        Visibility="{Binding Visibility}">

        <Border
            Width="{StaticResource DoubleMenuMargin}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

            <Image
                Margin="6"
                Stretch="Uniform"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Source="{Binding ImagePath}" />
        </Border>

        <TextBlock
            Margin="15.34,2,0,0"
            Background="Transparent"
            Foreground="White"
            FontSize="14"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="{Binding Title}" />
    </StackPanel>

</UserControl>
