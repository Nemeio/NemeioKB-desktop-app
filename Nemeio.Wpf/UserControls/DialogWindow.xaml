<Window 
    x:Class="Nemeio.Wpf.UserControls.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Nemeio.Wpf.ViewModel"
    xmlns:local="clr-namespace:Nemeio.Wpf.UserControls"
    mc:Ignorable="d"
    Title="DialogWindow" 
    WindowStyle="None"
    AllowsTransparency="True"
    ResizeMode="NoResize"
    Activated="Window_Activated"
    Closed="Window_Closed"
    MinHeight="150"
    Width="350"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation ="CenterScreen">

    <!--<Window.DataContext>
        <vm:DialogWindowViewModel />
    </Window.DataContext>-->

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Styles/BaseDictionary.xaml" />
                <ResourceDictionary
                    Source="../Styles/ColorDictionary.xaml" />
                <ResourceDictionary
                    Source="../Styles/TemplateDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel
        Orientation="Vertical"
        Background="{StaticResource LdlcDarkViolet}"
        MouseDown="StackPanel_MouseDown">

        <!-- Title section -->
        <Grid
            Height="49"
            Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="{StaticResource GridLengthMenuMargin}" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                VerticalAlignment="Stretch"
                Background="{StaticResource LdlcViolet}">

                <Image
                    Margin="15,12,12,12"
                    Stretch="Uniform"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Source="{Binding ImagePath}" />
            </Border>
            <StackPanel
                Grid.Column="1"
                Orientation="Vertical">
                <Border
                    Height="47">
                    <TextBlock
                        Text="{Binding Title}"
                        Foreground="{StaticResource LdlcGreen}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"
                        FontSize="18"
                        Margin="24,0,0,0" />
                </Border>
                <Rectangle
                    HorizontalAlignment="Stretch"
                    Fill="White"
                    Height="2" />
            </StackPanel>
        </Grid>

        <Border
            MinHeight="30"
            Margin="20">
            <TextBlock
                Foreground="White"
                FontSize="14"
                Margin="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextWrapping="WrapWithOverflow"
                TextAlignment="Center"
                LineStackingStrategy="BlockLineHeight"
                LineHeight="25"
                Text="{Binding Body}" />
        </Border>

        <StackPanel
            Orientation="Horizontal"
            Height="30"
            Margin="20,0,20,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button
                Style="{StaticResource regularButton}"
                Height="24"
                Width="30"
                Margin="7.5,0"
                Content="{Binding Yes}"
                FontSize="14"
                Foreground="White"
                Click="YesClick"/>
            <Button
                Style="{StaticResource regularButton}"
                Height="24"
                Width="30"
                Margin="7.5,0"
                Content="{Binding No}"
                FontSize="14"
                Foreground="White"
                Click="NoClick" 
                Visibility="{Binding NoVisibility}" />
            <Button
                Style="{StaticResource regularButton}"
                Height="24"
                Width="30"
                Margin="7.5,0"
                Content="{Binding Cancel}"
                FontSize="14"
                Foreground="White"
                Click="CancelClick"
                Visibility="{Binding CancelVisibility}" />
        </StackPanel>
    </StackPanel>
</Window>

