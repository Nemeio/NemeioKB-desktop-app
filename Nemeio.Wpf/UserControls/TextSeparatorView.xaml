<UserControl x:Class="Nemeio.Wpf.UserControls.TextSeparatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nemeio.Wpf.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="10" 
             d:DesignWidth="255">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Styles/BaseDictionary.xaml" />
                <ResourceDictionary
                    Source="../Styles/ColorDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid
        Height="15"
        VerticalAlignment="Center"
        Visibility="{Binding Visibility}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="{StaticResource GridLengthMenuMargin}" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            Margin="0, 0, 10, 0"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Foreground="{StaticResource LdlcGray}"
            Background="Transparent"
            FontSize="11"
            Text="{Binding Title}" />

        <Rectangle
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            Height="2"
            IsEnabled="{Binding Enabled}">
            <Rectangle.Style>
                <Style
                    TargetType="Rectangle">
                    <Style.Triggers>
                        <Trigger
                            Property="IsEnabled"
                            Value="False">
                            <Setter
                                Property="Fill"
                                Value="{StaticResource LdlcGray}" />
                        </Trigger>
                        <Trigger
                            Property="IsEnabled"
                            Value="True">
                            <Setter
                                Property="Fill"
                                Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>

    </Grid>
</UserControl>
