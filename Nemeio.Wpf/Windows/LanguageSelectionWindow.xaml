<Window 
    x:Class="Nemeio.Wpf.Windows.LanguageSelectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Nemeio.Wpf.ViewModel"
    xmlns:helpers="clr-namespace:Nemeio.Wpf.Helpers"
    mc:Ignorable="d"
    Title="{Binding Title}" 
    WindowStyle="None"
    AllowsTransparency="True"
    ResizeMode="NoResize"
    Height="265" 
    Width="500"
    Activated="Window_Activated"
    Closed="Window_Closed"
    WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:SelectionLanguageViewModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Styles/BaseDictionary.xaml" />
                <ResourceDictionary
                    Source="../Styles/ColorDictionary.xaml" />
                <ResourceDictionary
                    Source="../Styles/TemplateDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid
        Background="{StaticResource LdlcDarkViolet}"
        MouseDown="Grid_MouseDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid
            Grid.Row="0"
            Background="Transparent">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource GridLengthMenuMargin}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                VerticalAlignment="Stretch"
                Background="{StaticResource LdlcViolet}">

                <Image
                    Margin="15,12,12,12"
                    Stretch="Uniform"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Source="/Icons/nemeio.ico" />
            </Border>
            <StackPanel
                Grid.Column="1"
                Orientation="Vertical">
                <Border
                    Height="48">
                    <TextBlock
                        Text="{Binding Title}"
                        Foreground="{StaticResource LdlcGreen}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"
                        FontSize="18"
                        Margin="24,2,0,0" />
                </Border>
                <Rectangle
                    HorizontalAlignment="Stretch"
                    Fill="White"
                    Height="2" />
            </StackPanel>
        </Grid>

        <Grid 
            Grid.Row="1"
            Margin="16">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <TextBlock 
                Grid.Row="0"
                Foreground="White"
                FontSize="14"
                Text="{Binding InformationText}"
                Margin="12, 6"/>

            <ComboBox 
                Grid.Row="2" 
                ItemsSource="{Binding Languages}"
                SelectedItem="{Binding SelectedLanguage}"
                Margin="12, 0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding NativeName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button 
                Grid.Row="5" 
                Content="{Binding ValidButtonText}"
                Style="{StaticResource regularButton}"
                FontSize="14"
                Foreground="White"
                IsEnabled="{Binding ValidIsEnable}"
                Background="{ StaticResource LdlcViolet }"
                Command="{Binding SelectLanguageCommand}"/>

        </Grid>
        
    </Grid>

</Window>
