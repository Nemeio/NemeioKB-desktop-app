<Window x:Class="Nemeio.Wpf.Windows.FactoryResetModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nemeio.Wpf.Windows"
        xmlns:vm="clr-namespace:Nemeio.Wpf.ViewModel"
        xmlns:helpers="clr-namespace:Nemeio.Wpf.Helpers"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Title="FactoryResetModal" 
        Height="320" 
        Width="480"
        Activated="Window_Activated"
        Closed="Window_Closed"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:FactoryResetViewModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Styles/BaseDictionary.xaml" />
                <ResourceDictionary
                    Source="../Styles/ColorDictionary.xaml" />
                <ResourceDictionary
                    Source="../Styles/TemplateDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid
        Background="{StaticResource LdlcDarkViolet}"
        MouseDown="Grid_MouseDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Background="Transparent">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource GridLengthMenuMargin}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                VerticalAlignment="Stretch"
                Background="{StaticResource LdlcViolet}">

                <Image
                    Margin="15,12,12,12"
                    Stretch="Uniform"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Source="/Icons/nemeio.ico" />
            </Border>
            <StackPanel
                Grid.Column="1"
                Orientation="Vertical">
                <Border
                    Height="48">
                    <TextBlock
                        Text="{Binding Title}"
                        Foreground="{StaticResource LdlcGreen}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"
                        FontSize="18"
                        Margin="24,2,0,0" />
                </Border>
                <Rectangle
                    HorizontalAlignment="Stretch"
                    Fill="White"
                    Height="2" />
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0" 
                Text="{Binding Explanation}"
                TextWrapping="Wrap"
                Foreground="White"
                FontSize="18"
                Margin="24" />

            <Button 
                Grid.Row="1" 
                Content="{Binding ValidButtonText}"
                Style="{StaticResource regularButton}"
                FontSize="14"
                Margin="24"
                Foreground="White"
                Background="{ StaticResource LdlcViolet }"
                Command="{Binding ValidCommand}"/>

        </Grid>

    </Grid>
    
</Window>
